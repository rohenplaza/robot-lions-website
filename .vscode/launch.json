{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Live Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "Server running at ([^\\s]+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}